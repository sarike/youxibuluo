extends base

block content
    div.container
        h1= "登录"
        form(action="/account/login" method="post")
            div.form-group
                input.form-control(name="username", placeholder="用户名/邮箱")
            div.form-group
                input.form-control(name="password", type="password", placeholder="密码")
            button.btn.btn-primary Submit